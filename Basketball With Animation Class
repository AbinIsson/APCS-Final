	   road.getElements().addAll(path);

	   PathTransition anim = new PathTransition();
	      anim.setNode(ball);
	      anim.setPath(road);
	      anim.setDuration(new Duration(1500));
	      anim.setCycleCount(Timeline.INDEFINITE);
	      
	      
	      
	      
	      
        StackPane root = new StackPane();
